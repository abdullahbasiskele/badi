  updatedAt       DateTime      @updatedAt

  @@index([subject])
  @@index([organizationId])
  @@index([instructorId])
}

// --- enrollment.prisma ---
// Relationship between user and course
model Enrollment {
  id        String           @id @default(uuid()) @db.Uuid
  userId    String           @db.Uuid
  courseId  String           @db.Uuid
