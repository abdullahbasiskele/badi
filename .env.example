# Application
NODE_ENV=development
PORT=3000
CORS_ORIGINS=http://localhost:3010

# Database
DB_HOST=127.0.0.1
DB_PORT=5432
DB_NAME=badi_db
DB_USER=postgres
DB_PASS=postgres
DB_SSL=prefer

DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:5432/badi_db?schema=public
DATABASE_DIRECT_URL=postgresql://postgres:postgres@127.0.0.1:5432/badi_db?schema=public

# Redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=replace-with-secure-password

# JWT / Tokens
JWT_ACCESS_SECRET=replace-with-access-secret
JWT_ACCESS_TTL=15m
JWT_REFRESH_SECRET=replace-with-refresh-secret
JWT_REFRESH_TTL=7d
JWT_ISSUER=badi-backend
JWT_ACCESS_AUDIENCE=badi-clients

# Security Controls
PASSWORD_SALT_ROUNDS=12
RATE_LIMIT_TTL=60
RATE_LIMIT_REQUESTS=100

# Frontend
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000
FRONTEND_PORT=3010